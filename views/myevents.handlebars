<div class="row">
  <div class="mx-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>



  
  <div class="mx-auto" style="width:800px">
    
    <h3 class="text-center">Your Events:</h3>
    
    {{#if projects.length}}
    <div class="project-list">
    {{#each projects as |project|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/project/{{project.id}}">{{project.name}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{project.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
    </div>
  {{/if}}
  </div>
  


<script src="./js/myevents.js"></script>
